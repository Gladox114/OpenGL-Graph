{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "g++ build active file",
		"command": "/usr/bin/g++",
		"args": ["-g", "${file}", "${fileDirname}/glad.c", "${fileDirname}/configReadTest.cpp",
			"-o", "${fileDirname}/${fileBasenameNoExtension}",
			"-lglfw",  "-lGL",  "-lm", "-lX11", "-lpthread", "-lXi", "-lXrandr", "-ldl", "-lfreetype"],
		"options": {
		  "cwd": "/usr/bin"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  }
	]
  }